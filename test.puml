skinparam activity {
  BackgroundColor White
  BorderColor Black
  FontName Calibri
  FontSize 10
}
 
skinparam decision {
  BackgroundColor #FFFFCC
  BorderColor #FF6600
  FontName Calibri
  FontSize 10
}
 
skinparam note {
  BackgroundColor #E6F3FF
  BorderColor #0066CC
  FontName Calibri
  FontSize 9
}
 
skinparam swimlane {
  BorderColor Black
  TitleBackgroundColor LightGray
  TitleFontName Calibri
  TitleFontSize 12
}
 
|Customer|
start
 
:Create Business Opportunity;
note right
  Customer initiates
  business request
end note
 
|Sales Team (ATK)|
:Receive Opportunity;
:Initiate Offer Process;
 
|SMART-SB (CLM)|
:Process Standard Offer;
 
if (Standard Order?) then (no)
  |Panda System|
  :Design Custom Solution;
  :Update CLM Configuration;
else (yes)
  :Continue Standard Processing;
endif
 
|SMART-SB (CLM)|
:Present Offer to Customer;
 
|Customer|
if (Accept Offer?) then (no)
  :Reject Offer;
  stop
else (yes)
  :Accept Offer;
endif
 
|SMART-SB (CLM)|
:Submit Order;
 
|Secure Networking|
:Validate Order;
:Orchestrate Workflow;
 
partition "Procurement & Logistics" {
  |Secure Networking|
  fork
    |OFI System|
    :Initiate Procurement;
    :Manage Suppliers;
    :Confirm Procurement;
  fork again
    |RCS (OPC)|
    :Process Hardware Order;
    
    |DMS System|
    :Plan Delivery;
    :Manage Logistics;
    :Confirm Delivery;
  end fork
}
 
|Secure Networking|
:Send Activation Request;
 
|BSP System|
:Receive Activation Request;
 
|Carmen System|
:Activate Service;
 
|Conan System|
:Configure Network;
:Provision Service;
 
|Carmen System|
:Complete Activation;
:Notify Customer;
 
|Customer|
:Validate Service;
 
partition "Billing Process" {
  |Carmen System|
  :Send Usage Data;
  
  |SAP BRIM|
  :Process Billing;
  :Rate Services;
  
  |SAP P02|
  :Validate Financials;
  :Post to Accounting;
  :Confirm Billing;
  
  |SAP BRIM|
  :Generate Invoice;
  
  |Customer|
  :Receive Invoice;
}
 
partition "Assurance & Inventory" {
  |Secure Networking|
  :Update Assurance Inventory;
  
  |PMA-ISEM|
  :Receive Inventory Data;
  
  |SAP BRIM|
  :Send Billing Events;
  
  |B2B Assurance|
  :Correlate Assurance Data;
  :Process Service Events;
  
  |PMA-ISEM|
  :Reconcile Inventory;
  :Complete Process;
}
 
'note over Customer "PMA-ISEM"
'  <color:blue><b>End-to-End Process Complete</b></color>
''  Lead ‚Üí Offer ‚Üí Order ‚Üí Fulfillment ‚Üí Billing ‚Üí Assurance
'end note
 
stop
 
@enduml
 
